<div class="container">
  
  <h2>Booking</h2>
  
  <form action="/attendences" method="post">
    
    <div class="member_select">
      <label for="member_select">Select a member</label>
      <div>
        <select name="member_id">
          <% for member in @members %>
          <option value="<%= member.id %>"><%= member.name %></option>
          <% end %>
        </select>
      </div>
    </div>
    
    <div class="class_select">
      <label for="class_select">Select a class</label>
      
      <div>
        <select name="gymclass_id">
          <% for gymclass in @gymclasses %>
          <option value="<%= gymclass.id %>"><%= gymclass.name %></option>
          <% end %>
        </select>
      </div>
      
    </div>
    
    <input type="submit" value="Send">
    
    <h4> <a class="back" href="/attendences">Back</a> </h4>
    
  </form>
  
</div>
