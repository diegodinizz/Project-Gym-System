<div class="container">

  <h2><%= @member.name %></h2>

  <p>E-mail: <%= @member.email %></p>
  <p>Mobile number: <%= @member.mobile_number %></p>

  <form action="/members/<%= @member.id %>/edit" method="get"><input type="submit" value="Edit"></form>
  <form action="/members/<%= @member.id %>/delete" method="POST"><input type="submit" value="Delete" id="delete-button"></form>

  <h4> <a class="back" href="/members">Back</a> </h4>

</div>
